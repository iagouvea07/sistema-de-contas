<style>
    .menu{
        height: 860px;
        width: 290px;
        border-radius: 5px;
        background-color: rgba(3, 73, 139, 0.582);
        box-shadow: 0px 2px 2px 2px rgba(0, 0, 0, 0.219);
        cursor: pointer;
        user-select: none;
        position: relative;
    }

    #check1{
        width: 10px;
        display: none;
    }

    .group1 label{
        font-size: 1.4em;
        color: rgb(223, 230, 230);
        display: block;
        text-align: center;
        padding-bottom: 5px;
    }

    .group1 label:hover{
        background-color: rgba(6, 74, 138, 0.582);
    }

    .group1 p{
        display: none;
    }

    input:checked + .group1 p{
        display: block;
        color: rgb(223, 230, 230);
        padding-bottom: 5px;
        border-radius: 2px;
        padding-left: 30px;
        padding-top: 5px;
        padding-bottom: 5px;
        font-size: 0.8em;
    }

    input:checked + .group1 p a{
        color: rgb(223, 230, 230);
        text-decoration: none;
    }

    input:checked + .group1 p:hover{
        color: rgb(41, 40, 40);
        background-color: rgba(7, 100, 187, 0.705);
        width: 250px;
        margin-left: 5px;
    }

    .options{

            border-radius: 8px;
    }

    .sair p a{
        text-decoration: none;
        text-align: center;
        position: absolute;
        left: 37%;
        transform: translate(-40%, 0);
        font-size: 1.3em;
        color: rgb(223, 230, 230);
        width: 305px;
    }

    .sair p a:hover{
        background-color: rgba(6, 74, 138, 0.582);
        color: rgb(219, 216, 216);
    }

    .sair p a:active{
        background-color: rgba(0, 55, 107, 0.582);
    }

    @media screen and (max-width: 1400px) {
        .menu {
            width: 180px;
        }

        .group1 label{
            font-size: 1.2em;
        }

        input:checked + .group1 p{
            font-size: 0.8em;
        }

        input:checked + .group1 p:hover{
            width: 160px;
        }   

        .sair p a{
            font-size: 1.2em;
            width: 210px;
            text-decoration: none;
        }

    }

    @media screen and (max-width: 800px){
        .menu{
            width: 160px;
        }

        .group1 label{
            font-size: 1em;
        }

        input:checked + .group1 p{
            font-size: 0.6em;
        }

        input:checked + .group1 p:hover{
            width: 120px;
        }   

        .sair p a{
            font-size: 1em;
            text-decoration: none;
            width: 170px;
        }
    }

        @media screen and (max-width: 600px){
        .menu{
            width: 130px;
        }

        .group1 label{
            font-size: 0.6em;
            margin-left: -5px;
        }

        input:checked + .group1 p{
            font-size: 0.5em;
        }

        input:checked + .group1 p:hover{
            width: 90px;
        }   

        .sair p a{
            font-size: 0.6em;
            width: 140px;
        }
    }


    @media screen and (max-width: 400px){
        .sair p a{
            width: 120px;
        }
        .menu{
            width: 120px;
        }
    }
</style>

<div class="menu">
    <input type="checkbox" name="financeiro" id="check1">
    <div class="group1">
        <label for="check1" style="cursor: pointer;">Financeiro</label>
        <div class="options">
        <p>&bull; <a href="http://192.168.15.85:8080/user/payment">Cadastrar pagamento</a></p>
        <p>&bull; <a href="http://192.168.15.85:8080/user/payment-register"> Adicionar pagamento</a></p>
        <p>&bull; <a href="http://192.168.15.85:8080/user/financial-report"> Relatorio de contas pagas</a></p>
        </div>
    </div>
        <div class="sair">
             <p class="sair"><a href="http://192.168.15.85:8080/user/logout">Logout</a></p>
        </div>

  </div>
